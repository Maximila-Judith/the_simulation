generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/simulation"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  result   Result?
  result_id Int?   @unique
}

model Result {
  id        Int     @id @default(autoincrement())
  tax_name  String
  tax_base  Float
  amount    Float
  rate      Float
  minimum   Float
  price_add Float
  tax_price Float
  user_id   Int?    @unique
  user      User?   @relation(fields: [user_id], references: [id])
}