generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/simulation"
}

// schema.prisma

model User {
  id       Int    @id @default(autoincrement())
  name     String @unique
  email    String? @unique
  password String
  results  Result[]
}

model Result {
  id         Int      @id @default(autoincrement())
  tax_name   String
  tax_base   String
  amount     String
  rate       String
  minimum    Float
  price_add  Float
  tax_price  String
  date       DateTime  @default(now())
  userId     Int?
  user       User?     @relation(fields: [userId], references: [id])
}
